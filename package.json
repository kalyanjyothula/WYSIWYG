{
  "name": "beyond-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node backend/server.js",
    "client": "npm start --prefix ../beyond",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "prod-setup-frontend": "cp -r ../beyond ./beyond",
    "front-end-setup": "if [ -d beyond ]; then cd beyond && git pull origin main; else git clone https://github.com/kalyanjyothula/beyond.git; fi",
    "build": "npm run front-end-setup && npm install && npm install --prefix beyond && npm run build --prefix beyond"
  },
